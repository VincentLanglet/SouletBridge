{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" id="prizes">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>{{ 'prizes.subtitle' | trans({}, 'prizes') }}</strong>
                    </h2>
                    <hr>
                    <h3 class="text-center">
                        {{ ('mixte.title') | trans({}, 'prizes') | nl2br }}
                    </h3>
                    <p class="text-center">
                        {{ ('mixte.text') | trans({}, 'prizes') | raw | nl2br }}
                    </p>
                    <hr>
                    <h3 class="text-center">
                        {{ ('open.title') | trans({}, 'prizes') | nl2br }}
                    </h3>
                    <p class="text-center">
                        {{ ('open.text') | trans({}, 'prizes') | raw | nl2br }}
                    </p>
                    <hr>
                    <h3 class="text-center">
                        {{ ('handicap.title') | trans({}, 'prizes') | nl2br }}
                    </h3>
                    <p class="text-center">
                        {{ ('handicap.text') | trans({}, 'prizes') | raw | nl2br }}
                    </p>
                    <hr>
                    <h3 class="text-center">
                        {{ ('barometer.title') | trans({}, 'prizes') | nl2br }}
                    </h3>
                    <p class="text-center">
                        {{ ('barometer.text') | trans({}, 'prizes') | raw | nl2br }}
                    </p>
                    <hr>
                    <h3 class="text-center">
                        {{ ('combined.title') | trans({}, 'prizes') | nl2br }}
                    </h3>
                    <p class="text-center">
                        {{ ('combined.text') | trans({}, 'prizes') | raw | nl2br }}
                    </p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>{{ 'funbridge.subtitle' | trans({}, 'prizes') }}</strong>
                    </h2>
                    <hr>
                    <p>
                        {{ ('table.funbridge.text') | trans({}, 'prizes') }}
                    </p>
                    <table class="funbridge-prize">
                        {% for i in 1..4 %}
                            <tr>
                                <td>
                                    {{ ('table.funbridge.title.'~i) | trans({}, 'prizes') | raw }}
                                </td>
                                <td>
                                    {{ ('table.funbridge.prize.'~i) | trans({}, 'prizes') | nl2br}}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    <p>
                        {{ 'funbridge.text' | trans({}, 'prizes') | raw | nl2br }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
