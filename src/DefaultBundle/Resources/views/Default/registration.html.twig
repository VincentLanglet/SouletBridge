{% extends 'DefaultBundle::base.html.twig' %}

{% block body %}
    <div class="container" id="registration">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        <strong>{{ ('subtitle') | trans({}, 'registration') }}</strong>
                    </h2>
                    <hr>
                    <p>
                        {% set mail = 'email' | trans({}, 'contact') %}
                        {% set link = 'link.key' | trans({}, 'registration') %}
                        {{ ('text') | trans(
                            {
                                '%mailto%':'<a href=\"mailto:'~mail~'\">'~mail~'</a>',
                                '%link%' : '<a href=\"http://81.93.5.215//servlet/FFBInscriptionSitePublic.ServletChoixCompe?codeSite=50\" target=\"_blank\">'~link~'</a>'
                            }, 'registration') | raw | nl2br }}
                    </p>
                </div>
             </div>
        </div>

        <div class="row">
            <div class="box">
                <form role="form" action="{{ path('registration') }}" method="post">
                    <p class="help-block">{{ form_errors(form) }}</p>
                    {{ form(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
