{% extends 'DefaultBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        TODO
                    </h2>
                    <hr>
                    <p>
                        {{ ('paragraph.presentation') | trans({}, 'schedule') }}
                    </p>
                </div>
            </div>
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        TODO
                    </h2>
                    <hr>
                    <p>
                        {{ ('paragraph.festivalForAll') | trans({}, 'schedule')|nl2br }}
                    </p>
                    <table class="schedule">
                        <thead>
                        <tr>
                            <td>
                                {{ ('table.day.title') | trans({}, 'schedule') }}
                            </td>
                            <td>
                                {{ ('table.schedule.title') | trans({}, 'schedule') }}
                            </td>
                            <td>
                                {{ ('table.program.title') | trans({}, 'schedule') }}
                            </td>
                        </tr>
                        </thead>
                        <tbody>
                        {% for i in 1..7 %}
                        <tr>
                            <td>
                                {{ ('table.day.'~i) | trans({}, 'schedule') }}
                            </td>
                            <td>
                                {{ ('table.schedule.'~i) | trans({}, 'schedule') }}
                            </td>
                            <td>
                                {{ ('table.program.'~i) | trans({}, 'schedule') }}
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container -->
{% endblock %}

{% block javascripts %}
{% endblock %}
